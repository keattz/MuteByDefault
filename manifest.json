{
  "name": "Mute By Default",
  "description": "Mute tabs by default",
  "version": "0.1",
  
  "permissions": [
    "tabs",
	"storage"
  ],
  
  "browser_action": {
    "default_icon": {
            "16": "icon.png"
          },
          "default_title": "Click to mute or unmute this website",
          "default_popup": "popup.html"
        },
  
  "background": {
    "scripts": ["bg.js"]
  },
  
  "options_page": "options.html",
  
  "manifest_version": 2
}